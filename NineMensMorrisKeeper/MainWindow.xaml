<Window x:Class="NineMensMorrisKeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NineMensMorrisKeeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.4*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="\background.jpg"></ImageBrush>
        </Grid.Background>
        <Button  Grid.Column="1" Grid.Row ="1" x:Name="GateOpenerButton" Content="Open the gate" Click="GateOpenerButton_Click" FontFamily="Algerian" FontSize="48" Foreground="White">
            <Button.Background>
                <ImageBrush ImageSource="\game.jpg"></ImageBrush>
            </Button.Background>
        </Button> 
     <Grid/>
    </Grid>
</Window>
